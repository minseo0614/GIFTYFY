<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.GIFTYFY" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand</item>
        <item name="colorSecondary">@color/brand_soft</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.GIFTYFY" parent="Base.Theme.GIFTYFY" />

    <style name="AppCustomIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/brand</item>
        <item name="android:width">80dp</item>
        <item name="android:height">56dp</item> 
        <item name="marginHorizontal">4dp</item>
        <item name="shapeAppearance">@style/AppIndicatorShape</item>
    </style>

    <style name="AppIndicatorShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>