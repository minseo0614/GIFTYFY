<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- [상단] 항상 보이는 부분 -->
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        tools:src="@tools:sample/avatars"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toTopOf="@+id/layoutExpandable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginBottom="12dp" />

    <TextView
        android:id="@+id/tvRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_tag"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:text="미설정"
        android:textColor="#9A97F3"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ivProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivProfile" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="친구 이름"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvRelation"
        app:layout_constraintStart_toEndOf="@id/ivProfile"
        app:layout_constraintTop_toTopOf="@id/ivProfile" />

    <TextView
        android:id="@+id/tvBirthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12월 25일"
        android:textColor="#767676"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <!-- [하단] 확장 영역 -->
    <LinearLayout
        android:id="@+id/layoutExpandable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProfile"
        tools:visibility="visible">

        <!-- 관계 태그 선택 영역 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="관계 설정"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none">
            
            <LinearLayout
                android:id="@+id/layoutRelationTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- 여기에 자바 코드로 태그 옵션들을 추가하거나, 
                     일단 간단히 몇 개 미리 배치해둡니다. -->
                <TextView
                    android:id="@+id/tagFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_tag"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="가족"
                    android:textColor="#9A97F3"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tagFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_tag"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="친구"
                    android:textColor="#9A97F3"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tagLove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_tag"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="연인"
                    android:textColor="#9A97F3"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tagWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_tag"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="회사"
                    android:textColor="#9A97F3"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tagAwkward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_tag"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="어사"
                    android:textColor="#9A97F3"
                    android:textSize="12sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="관심사"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="#게임 #독서 #운동"
            android:textColor="#9A97F3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="추천 선물"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/layoutGiftList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <include layout="@layout/item_gift_recommend" />
                <include layout="@layout/item_gift_recommend" />
                <include layout="@layout/item_gift_recommend" />
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnGoToGift"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#ECEBFF"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="0dp"
            android:text="선물하러 가기"
            android:textColor="#9A97F3"
            android:textSize="12sp"
            android:textStyle="bold"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E5E5EC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
